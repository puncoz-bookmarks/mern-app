  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "restart": true,
      "sourceMaps": true,
      "remoteRoot": "/usr/src/app",
      "localRoot": "${workspaceFolder}/server",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/dist/**/*.js}"]
    }
  ]
}
